<config>
    <modules>
        <Ash_Core>
             <version>1.6.0</version>
        </Ash_Core>
    </modules>

    <global>
        <helpers>
            <ash>
                <class>Ash_Core_Helper</class>
            </ash>
        </helpers>
        <blocks>
            <ash>
                <class>Ash_Core_Block</class>
            </ash>
            <page>
                <rewrite>
                    <html_head>Ash_Core_Block_Html_Head</html_head>
                </rewrite>
            </page>
            <adminhtml>
                <rewrite>
                    <page_head>Ash_Core_Block_Adminhtml_Page_Head</page_head>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Ash_Core>
                    <files>
                        <default>Ash_Core.csv</default>
                    </files>
                </Ash_Core>
            </modules>
        </translate>
    </adminhtml>
</config>
