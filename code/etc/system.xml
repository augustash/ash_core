<config>
    <tabs>
        <ashcore translate="label" module="ash">
            <label>Ash Extensions</label>
            <sort_order>10</sort_order>
        </ashcore>
    </tabs>
    <sections>
        <ash_info translate="label" module="ash">
            <label>Support Info</label>
            <tab>ashcore</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <info>
                    <frontend_model>ash/system_config_info</frontend_model>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>
            </groups>
        </ash_info>
    </sections>
</config>
